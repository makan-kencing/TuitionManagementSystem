@model TuitionManagementSystem.Web.Features.Attendance.AttendanceSummary.GetAttendanceSummaryResponse
@{
    ViewData["Title"] = "Students Attendance Summary";
}

<div class="container-fluid">
    <h2>Attendance Summary</h2>
</div>

<div>

    @if (Model?.Student is null)
    {
        <div class="alert alert-warning">No student info found.</div>
    }
    else
    {
        @foreach (var course in Model.Courses)
        {
            var rate = course.Stats.AttendanceRate;

            string barClass =
                rate >= 80 ? "bg-success" :
                rate >= 60 ? "bg-warning" :
                rate > 0 ? "bg-danger" :
                "bg-secondary";

            <a href="@Url.Action("History", "Attendance", new { courseId = course.Course.Id })"
               class="text-decoration-none text-dark">
                <div class="card mb-3 shadow-sm attendance-card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1 fw-semibold">@course.Course.SubjectName : @course.Course.Name</h5>
                            <div class="text-muted small">
                                Total Sessions: @course.Stats.TotalSessions
                            </div>
                            <div class="text-muted small">
                                Attended: @course.Stats.AttendedSessions
                            </div>
                        </div>

                        <div style="width:220px">
                            @if (course.Stats.TotalSessions == 0)
                            {
                                <span class="badge bg-secondary w-100 text-center py-3">
                                    No sessions yet
                                </span>
                            }
                            else
                            {
                                <div class="progress" style="height:20px">
                                    <div class="progress-bar @barClass"
                                         role="progressbar"
                                         style="width:@rate%">
                                        @rate%
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </a>
        }
    }


</div>
