@model TuitionManagementSystem.Web.Features.Attendance.GetAttendanceSummary.GetAttendanceSummaryResponse
@{
    ViewData["Title"] = "Students Attendance Summary";
    var timezone = TimeZoneInfo.FindSystemTimeZoneById("Asia/Kuala_Lumpur");
}

<div class="mb-3">
    <button type="button"
            class="btn btn-sm btn-outline-secondary d-inline-flex align-items-center gap-1"
            onclick="window.history.back();">
        <i class="fas fa-arrow-left"></i>
        Back
    </button>
</div>
<div class="container-fluid">
    <h2>Attendance Summary</h2>
</div>

<div>

    @if (Model?.Student is null)
    {
        <div class="alert alert-warning">No student info found.</div>
    }
    else
    {
        foreach (var course in Model.Courses)
        {
            <a asp-controller="Attendance" asp-action="CourseHistory" asp-route-id="@course.Course.Id"
               class="text-decoration-none text-dark">
                <div class="card mb-3 shadow-sm attendance-card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1 fw-semibold">@course.Course.SubjectName : @course.Course.Name</h5>
                            <div class="text-muted small">
                                Total Sessions: @course.Stats.TotalSessions
                            </div>
                            <div class="text-muted small">
                                Attended: @course.Stats.AttendedSessions
                            </div>
                        </div>

                        <div style="width:220px">
                            @if (course.Stats.TotalSessions == 0)
                            {
                                <span class="badge bg-secondary w-100 text-center py-3">
                                    No sessions yet
                                </span>
                            }
                            else
                            {

                                var percentage = course.Stats.AttendancePercentage;

                                var barClass = percentage < 80 ? "bg-danger" : "bg-success";

                                <div class="progress" style="height:20px;">
                                    <div class="progress-bar @barClass"
                                         role="progressbar"
                                         style="width:@($"{percentage}%");"
                                         aria-valuenow="@percentage"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        @percentage%
                                    </div>
                                </div>


                            }
                        </div>

                    </div>
                </div>
            </a>
        }
    }
</div>



