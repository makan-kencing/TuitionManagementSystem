@model TuitionManagementSystem.Web.Features.Attendance.SessionStudentList.GetSessionStudentListResponse

@{
    ViewData["Title"] = "Student Management";
}

<h2>Student Management</h2>

<table class="table table-bordered table-hover">
    <thead class="table-light">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Status</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (Model.StudentList.Count == 0)
    {
        <tr>
            <td colspan="4">
                No students enrolled for this session
            </td>
        </tr>
    }
    @foreach (var student in Model.StudentList)
    {
        var attend = student.AttendanceId is not null;

        <tr>
            <td>@student.StudentId</td>
            <td>@student.DisplayName</td>
            <td>
                <div>
                    @if (attend)
                    {
                        <span id="status-@student.StudentId" class="badge bg-success">Attend</span>
                    }
                    else if (Model.CreatedOn < Model.EndDate)
                    {
                        <span id="status-@student.StudentId" class="badge bg-warning text-dark">Not Taken</span>
                    }
                    else
                    {
                        <span id="status-@student.StudentId" class="badge bg-danger">Absent</span>
                    }
                </div>
            </td>
            <td>
                @if (Model.CanTakeAttendance)
                {
                    if (attend)
                    {
                        <button
                            id="attendance-action-@student.StudentId"
                            hx-delete
                            hx-controller="Attendance"
                            hx-action="RemoveStudentAttendance"
                            hx-route-id="@student.AttendanceId"
                            hx-target="#modal"
                            type="submit"
                            class="btn btn-danger"
                            data-bs-toggle="modal" data-bs-target="#modal">
                            <i class="fa-solid fa-delete-left"></i>
                        </button>
                    }
                    else
                    {
                        <button
                            id="attendance-action-@student.StudentId"
                            hx-post
                            hx-controller="Attendance"
                            hx-action="MarkStudentAttended"
                            hx-route-sessionId="@Model.SessionId"
                            hx-route-studentId="@student.StudentId"
                            hx-target="#modal"
                            type="submit"
                            class="btn btn-primary"
                            data-bs-toggle="modal" data-bs-target="#modal">
                            <i class="fa-solid fa-handshake-angle"></i>
                        </button>
                    }
                }
                else if (!Model.IsCodeGenerated)
                {
                    <span class="badge bg-danger">
                        The code haven generate yet
                    </span>
                }
                else
                {
                    <span class="badge bg-danger">
                        Over The Taken Time
                    </span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
