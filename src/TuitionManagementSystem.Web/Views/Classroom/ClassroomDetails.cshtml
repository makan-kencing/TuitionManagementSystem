@model TuitionManagementSystem.Web.Features.Classroom.ClassroomResponse
@{
    ViewData["Title"] = "Classroom Details";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h5 class="mb-0 fw-bold text-primary d-flex align-items-center">
                        <i class="bi bi-door-open-fill me-2"></i> Classroom Details
                    </h5>
                </div>

                <div class="card-body px-4 pb-4">
                    <div class="d-flex justify-content-between align-items-end mb-4">
                        <div>
                            <label class="small text-muted text-uppercase fw-bold d-block mb-1">Location</label>
                            <h2 class="fw-bold text-dark mb-0">@Model.Location</h2>
                        </div>
                        <div class="text-end">
                            <label class="small text-muted text-uppercase fw-bold d-block mb-1">Max Capacity</label>
                            <h3 class="fw-bold text-success mb-0">@Model.MaxCapacity <span class="fs-6 fw-normal">Pax</span></h3>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="small text-muted text-uppercase fw-bold d-block mb-2">Room Notes</label>
                        <div class="p-3 bg-light rounded-3 text-secondary border-0 italic-placeholder">
                            <span class="fst-italic text-muted">
                                <i class="bi bi-info-circle me-1"></i> No additional notes provided for this classroom.
                            </span>
                        </div>
                    </div>




                </div>

                <div class="card-footer bg-white py-3 border-top-0 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                        <i class="bi bi-pencil-square me-1"></i> Edit Classroom
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    /* Custom Icon Box Styling */
    .icon-box {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Matching the soft-gray background from your Course screenshot */
    .bg-light {
        background-color: #f8f9fa !important;
    }

    /* Ensuring the card looks "floating" like the course details */
    .card {
        border-radius: 12px;
    }

    h2 {
        letter-spacing: -0.5px;
    }
</style>
