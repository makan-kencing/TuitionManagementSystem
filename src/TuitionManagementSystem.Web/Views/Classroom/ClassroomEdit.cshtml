@model TuitionManagementSystem.Web.Features.Classroom.ClassroomFormVM
@{
    ViewData["Title"] = "Edit Classroom";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h3 mb-0 text-gray-800">Edit Classroom</h2>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>

<div class="card border-0 shadow-sm rounded-3">
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            @await Html.PartialAsync("_ClassroomForm", Model)

            <div class="mt-3">
                <button type="submit" class="btn btn-primary me-2">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

