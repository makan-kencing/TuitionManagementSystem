@model TuitionManagementSystem.Web.ViewModels.Schedule.ScheduleFormVm


<div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="CourseId" class="form-label">Course</label>
        <select asp-for="CourseId" asp-items="(IEnumerable<SelectListItem>)ViewBag.Courses" class="form-select">
            <option value="">-- Select Course --</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>
</div>

<div class="mb-3">
    <label asp-for="Summary" class="form-label"></label>
    <input asp-for="Summary" class="form-control" placeholder="e.g., Mathematics Grade 10" />
    <span asp-validation-for="Summary" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-control" rows="2"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="Start" class="form-label"></label>
        <input asp-for="Start" class="form-control" type="datetime-local"
               value="@Model.Start.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="Start" class="text-danger"></span>
    </div>

    <div class="col-md-6 mb-3">
        <label asp-for="End" class="form-label"></label>
        <input asp-for="End" class="form-control" type="datetime-local"
               value="@Model.End.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="End" class="text-danger"></span>
    </div>
</div>

<hr />

<h5 class="mb-3">Recurrence Settings</h5>

<div class="mb-3">
    <label asp-for="Repeat" class="form-label"></label>
    <select asp-for="Repeat" class="form-select"
            asp-items="Html.GetEnumSelectList<TuitionManagementSystem.Web.ViewModels.Schedule.RepeatKind>()">
    </select>
</div>

<div class="row">
    <div class="col-md-4 mb-3">
        <label asp-for="Interval" class="form-label">Every X weeks</label>
        <input asp-for="Interval" class="form-control" min="1" />
    </div>

    <div class="col-md-8 mb-3">
        <label class="form-label d-block">Days of week</label>

        <div class="btn-group" role="group">
            @{
                var days = Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>().ToList();
            }
            @foreach (var d in days)
            {
                var isChecked = Model.ByDay != null && Model.ByDay.Contains(d);
                <input type="checkbox" class="btn-check" name="ByDay" id="day_@d" value="@d" @(isChecked ? "checked" : "") autocomplete="off">
                <label class="btn btn-outline-primary btn-sm" for="day_@d">@d.ToString().Substring(0, 3)</label>
            }
        </div>
    </div>
</div>

<div class="mb-3">
    <label asp-for="Until" class="form-label">End Recurrence (Until)</label>
    <input asp-for="Until" class="form-control" type="date"
           value="@(Model.Until.HasValue ? Model.Until.Value.ToString("yyyy-MM-dd") : "")" />
</div>

<hr />


<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="RecurrenceDatesText" class="form-label">Add Specific Dates (RDATE)</label>
        <textarea asp-for="RecurrenceDatesText" class="form-control" rows="3" placeholder="yyyy-MM-dd"></textarea>
        <small class="text-muted">Enter one date per line</small>
    </div>

    <div class="col-md-6 mb-3">
        <label asp-for="ExceptionDatesText" class="form-label">Exclude Dates (EXDATE)</label>
        <textarea asp-for="ExceptionDatesText" class="form-control" rows="3" placeholder="yyyy-MM-dd"></textarea>
        <small class="text-muted">Enter one date per line</small>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
