@model TuitionManagementSystem.Web.Features.Authentication.Security.VerifyOtpViewModel

@{
    ViewData["Title"] = "Enter OTP";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-lg border-0 rounded-4"
         style="max-width: 420px; width: 100%;">

        <div class="card-header bg-primary text-white text-center py-4 rounded-top-4">
            <h3 class="mb-0">Verify OTP</h3>
            <small>Please enter the 6-digit code sent to your email</small>
        </div>

        <div class="card-body p-4">

            <form asp-action="EnterOtp" method="post">
                <div class="mb-3">
                    <label asp-for="Otp" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="fa-solid fa-shield-halved text-muted"></i>
                        </span>
                        <input asp-for="Otp"
                               class="form-control text-center fs-5"
                               placeholder="Enter 6-digit OTP"
                               maxlength="6"
                               inputmode="numeric"
                               required
                               autofocus />
                    </div>
                    <span asp-validation-for="Otp"
                          class="small text-danger"></span>
                </div>

                <button type="submit"
                        class="btn btn-primary w-100 py-2 fw-semibold">
                    Verify OTP
                </button>
            </form>

            <form asp-action="ResendOtp"
                  method="post"
                  class="text-center mt-2">
                <button type="submit"
                        class="btn btn-link text-decoration-none">
                    Resend OTP
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-controller="Authentication"
                   asp-action="Login"
                   class="text-decoration-none small">
                    ← Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: '@error.ErrorMessage',
                        confirmButtonColor: '#3085d6'
                    });
                    </text>
                }
            }


            @if (TempData["Message"] != null)
            {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: '@TempData["Message"]',
                    confirmButtonColor: '#3085d6'
                });
                </text>
            }
        });
    </script>
}
