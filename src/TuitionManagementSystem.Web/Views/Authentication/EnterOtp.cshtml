@model TuitionManagementSystem.Web.Features.Authentication.Security.VerifyOtpViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Enter OTP";
}

<div class="otp-page d-flex min-vh-100 align-items-center justify-content-center">
    <div class="card otp-card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Verify OTP</h3>
            <p class="text-muted small">Please enter the 6-digit code sent to your email</p>
        </div>

        <form asp-action="EnterOtp" method="post">
            <div class="mb-3">
                <label asp-for="Otp" class="form-label fw-semibold"></label>
                <div class="input-group shadow-sm rounded">
                    <span class="input-group-text bg-light border-0">
                        <i class="fa-solid fa-shield-halved text-muted"></i>
                    </span>
                    <input asp-for="Otp"
                           class="form-control text-center fs-5 border-0"
                           placeholder="Enter 6-digit OTP"
                           maxlength="6"
                           inputmode="numeric"
                           required
                           autofocus />
                </div>
                <span asp-validation-for="Otp" class="small text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">
                Verify OTP
            </button>
        </form>

        <form asp-action="ResendOtp" method="post" class="text-center mt-3">
            <button type="submit" class="btn btn-link text-decoration-none">
                Resend OTP
            </button>
        </form>

        <div class="text-center mt-4">
            <a asp-controller="Authentication" asp-action="Login" class="text-decoration-none small">
                ← Back to Login
            </a>
        </div>
    </div>
</div>

<style>
body {
    background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
}

.otp-page {
    padding: 2rem;
}

.otp-card {
    border-radius: 1rem;
}

.input-group {
    border-radius: 0.5rem;
}

.input-group .form-control:focus {
    box-shadow: none;
}

.btn-primary {
    background: #4e73df;
    border: none;
}

.btn-primary:hover {
    background: #224abe;
}
</style>

@section Scripts {
<script>
document.addEventListener("DOMContentLoaded", function () {
    @* Display ModelState errors via SweetAlert *@
    @if (ViewData.ModelState.ErrorCount > 0)
    {
        foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <text>
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: '@error.ErrorMessage',
                confirmButtonColor: '#3085d6'
            });
            </text>
        }
    }

    @* Display TempData success messages *@
    @if (TempData["Message"] != null)
    {
        <text>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: '@TempData["Message"]',
            confirmButtonColor: '#3085d6'
        });
        </text>
    }
});
</script>
}
