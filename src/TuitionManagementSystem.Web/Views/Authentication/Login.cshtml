@model TuitionManagementSystem.Web.Features.Authentication.Login.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<form asp-controller="Authentication" asp-action="Login">
    <div>
        <label asp-for="Username"></label>
        <input type="text" asp-for="Username"/>
        <span asp-validation-for="Username"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input type="text" asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="RememberMe"></label>
        <input type="checkbox" asp-for="RememberMe"/>
    </div>

    <button type="submit">Login</button>

    @Html.ValidationMessage("Invalid")
</form>


