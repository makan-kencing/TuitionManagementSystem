@model TuitionManagementSystem.Web.Features.Authentication.Login.LoginViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div class="login-page d-flex min-vh-100 align-items-center justify-content-center">
    <div class="card login-card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px; width: 100%;">

        <a asp-controller="Home"
           asp-action="Index"
           class="btn btn-light position-absolute top-0 end-0 m-3 rounded-circle shadow-sm back-btn"
           title="Go back">
            <i class="fa-solid fa-arrow-left"></i>
        </a>

        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Welcome Back</h2>
            <p class="text-muted small">Sign in to your account</p>
        </div>

        <form asp-controller="Authentication"
              asp-action="Login"
              asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]">

            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-semibold"></label>
                <div class="input-group shadow-sm rounded">
                    <span class="input-group-text bg-light border-0">
                        <i class="fa-solid fa-user text-muted"></i>
                    </span>
                    <input asp-for="Username"
                           class="form-control border-0"
                           placeholder="Enter your username"
                           required
                           autofocus/>
                </div>
                <span asp-validation-for="Username" class="small text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <div class="input-group shadow-sm rounded">
                    <span class="input-group-text bg-light border-0">
                        <i class="fa-solid fa-lock text-muted"></i>
                    </span>
                    <input asp-for="Password"
                           class="form-control border-0"
                           placeholder="Enter your password"
                           required/>
                </div>
                <span asp-validation-for="Password" class="small text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input"/>
                    <label asp-for="RememberMe" class="form-check-label">
                        Remember me
                    </label>
                </div>
                <a asp-action="ForgotPassword" class="small text-decoration-none">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">
                Login
            </button>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-center mt-3 py-2">
                    @Html.ValidationMessage("Invalid")
                </div>
            }

            <hr class="my-4"/>

            <div class="text-center">
                <span class="text-muted small">Donâ€™t have an account?</span>
                <br/>
                <a asp-controller="Authentication"
                   asp-action="Register"
                   class="btn btn-outline-primary mt-2 w-100 shadow-sm">
                    Create an account
                </a>
            </div>
        </form>
    </div>
</div>

<style>
body {
    background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
}

.login-page {
    padding: 2rem;
}

.login-card {
    border-radius: 1rem;
}

.input-group {
    border-radius: 0.5rem;
}

.input-group .form-control:focus {
    box-shadow: none;
}

.btn-primary {
    background: #4e73df;
    border: none;
}

.btn-primary:hover {
    background: #224abe;
}
</style>

@section Scripts {
    <script>

        document.addEventListener("DOMContentLoaded", function () {
            var message = '@Html.Raw(TempData["RegisterMessage"])';
            var status = '@TempData["RegisterStatus"]';

            if (message) {
                Swal.fire({
                    title: status === 'success' ? 'Success' : 'Error',
                    html: message,
                    icon: status === 'success' ? 'success' : 'error',
                    showConfirmButton: true
                });
            }
        });
    </script>
}
