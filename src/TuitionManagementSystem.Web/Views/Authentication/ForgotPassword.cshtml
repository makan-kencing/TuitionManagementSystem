@model TuitionManagementSystem.Web.Features.Authentication.Security.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-lg border-0 rounded-4"
         style="max-width: 420px; width: 100%;">

        <div class="card-header bg-primary text-white text-center py-4 rounded-top-4">
            <h3 class="mb-0">Forgot Password</h3>
            <small>We’ll send you a one-time password</small>
        </div>

        <div class="card-body p-4">
            <form asp-action="ForgotPassword" method="post">

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="fa-solid fa-envelope text-muted"></i>
                        </span>
                        <input asp-for="Email"
                               class="form-control"
                               placeholder="Enter your email address"
                               required
                               autofocus />
                    </div>
                    <span asp-validation-for="Email"
                          class="small text-danger"></span>
                </div>

                <button type="submit"
                        class="btn btn-primary w-100 py-2 fw-semibold">
                    Send OTP
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-controller="Authentication"
                   asp-action="Login"
                   class="text-decoration-none small">
                    ← Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @if (TempData["Error"] != null)
            {
                <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: '@TempData["Error"]',
                    confirmButtonColor: '#3085d6'
                });
                </text>
            }
        });
    </script>
}
