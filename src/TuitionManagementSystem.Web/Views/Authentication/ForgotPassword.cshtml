@model TuitionManagementSystem.Web.Features.Authentication.Security.ForgotPasswordViewModel

@{
Layout = "_AuthLayout";
    ViewData["Title"] = "Forgot Password";
}

<div class="forgot-password-page d-flex min-vh-100 align-items-center justify-content-center">
    <div class="card forgot-password-card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Forgot Password</h3>
            <p class="text-muted small">We’ll send you a one-time password to reset your account</p>
        </div>

        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <div class="input-group shadow-sm rounded">
                    <span class="input-group-text bg-light border-0">
                        <i class="fa-solid fa-envelope text-muted"></i>
                    </span>
                    <input asp-for="Email"
                           class="form-control border-0"
                           placeholder="Enter your email address"
                           required
                           autofocus />
                </div>
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">
                Send OTP
            </button>
        </form>

        <div class="text-center mt-4">
            <a asp-controller="Authentication" asp-action="Login" class="text-decoration-none small">
                ← Back to Login
            </a>
        </div>
    </div>
</div>

<style>
body {
    background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
}

.forgot-password-page {
    padding: 2rem;
}

.forgot-password-card {
    border-radius: 1rem;
}

.input-group {
    border-radius: 0.5rem;
}

.input-group .form-control:focus {
    box-shadow: none;
}

.btn-primary {
    background: #4e73df;
    border: none;
}

.btn-primary:hover {
    background: #224abe;
}
</style>

@section Scripts {
<script>
document.addEventListener("DOMContentLoaded", function () {
    @if (TempData["Error"] != null)
    {
        <text>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '@TempData["Error"]',
            confirmButtonColor: '#3085d6'
        });
        </text>
    }

    @if (TempData["Success"] != null)
    {
        <text>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: '@TempData["Success"]',
            confirmButtonColor: '#3085d6'
        });
        </text>
    }
});
</script>
}
