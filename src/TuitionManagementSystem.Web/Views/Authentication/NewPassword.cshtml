@model TuitionManagementSystem.Web.Features.Authentication.Security.NewPasswordViewModel

@{
    Layout = "_Base";
    ViewData["Title"] = "Set New Password";
}

<div class="newpassword-page d-flex min-vh-100 align-items-center justify-content-center">
    <div class="card newpassword-card shadow-lg border-0 rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Set New Password</h3>
            <p class="text-muted small">Create a strong password for your account</p>
        </div>

        <form asp-action="NewPassword" method="post">
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                <div class="input-group shadow-sm rounded">
                    <span class="input-group-text bg-light border-0">
                        <i class="fa-solid fa-lock text-muted"></i>
                    </span>
                    <input asp-for="NewPassword"
                           type="password"
                           class="form-control border-0"
                           placeholder="Enter new password"
                           minlength="6"
                           required
                           autofocus />
                </div>
                <span asp-validation-for="NewPassword" class="small text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                <div class="input-group shadow-sm rounded">
                    <span class="input-group-text bg-light border-0">
                        <i class="fa-solid fa-lock text-muted"></i>
                    </span>
                    <input asp-for="ConfirmPassword"
                           type="password"
                           class="form-control border-0"
                           placeholder="Confirm new password"
                           minlength="6"
                           required />
                </div>
                <span asp-validation-for="ConfirmPassword" class="small text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">
                Save Password
            </button>
        </form>

        <div class="text-center mt-4">
            <a asp-controller="Authentication" asp-action="Login" class="text-decoration-none small">
                ← Back to Login
            </a>
        </div>
    </div>
</div>

<style>
body {
    background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
}

.newpassword-page {
    padding: 2rem;
}

.newpassword-card {
    border-radius: 1rem;
}

.input-group {
    border-radius: 0.5rem;
}

.input-group .form-control:focus {
    box-shadow: none;
}

.btn-primary {
    background: #4e73df;
    border: none;
}

.btn-primary:hover {
    background: #224abe;
}
</style>

@section Scripts {
<script>
document.addEventListener("DOMContentLoaded", function () {
    @* Display ModelState errors via SweetAlert *@
    @if (ViewData.ModelState.ErrorCount > 0)
    {
        foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <text>
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: '@error.ErrorMessage',
                confirmButtonColor: '#3085d6'
            });
            </text>
        }
    }

    @* Display TempData success messages *@
    @if (TempData["Success"] != null)
    {
        <text>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: '@TempData["Success"]',
            confirmButtonColor: '#3085d6'
        });
        </text>
    }
});
</script>
}
