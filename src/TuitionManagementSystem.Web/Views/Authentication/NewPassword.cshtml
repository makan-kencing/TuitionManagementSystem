@model TuitionManagementSystem.Web.Features.Authentication.Security.NewPasswordViewModel

@{
    ViewData["Title"] = "Set New Password";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-lg border-0 rounded-4"
         style="max-width: 420px; width: 100%;">

        <div class="card-header bg-primary text-white text-center py-4 rounded-top-4">
            <h3 class="mb-0">Set New Password</h3>
            <small>Create a strong password for your account</small>
        </div>

        <div class="card-body p-4">

            <form asp-action="NewPassword" method="post">

                <div class="mb-3">
                    <label asp-for="NewPassword"
                           class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="fa-solid fa-lock text-muted"></i>
                        </span>
                        <input asp-for="NewPassword"
                               type="password"
                               class="form-control"
                               placeholder="Enter new password"
                               required
                               autofocus />
                    </div>
                    <span asp-validation-for="NewPassword"
                          class="small text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword"
                           class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="fa-solid fa-lock text-muted"></i>
                        </span>
                        <input asp-for="ConfirmPassword"
                               type="password"
                               class="form-control"
                               placeholder="Confirm new password"
                               required />
                    </div>
                    <span asp-validation-for="ConfirmPassword"
                          class="small text-danger"></span>
                </div>

                <button type="submit"
                        class="btn btn-primary w-100 py-2 fw-semibold">
                    Save Password
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-controller="Authentication"
                   asp-action="Login"
                   class="text-decoration-none small">
                    ← Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: '@error.ErrorMessage',
                        confirmButtonColor: '#3085d6'
                    });
                    </text>
                }
            }

            @if (TempData["Success"] != null)
            {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: '@TempData["Success"]',
                    confirmButtonColor: '#3085d6'
                });
                </text>
            }
        });
    </script>
}
