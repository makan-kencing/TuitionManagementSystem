@model TuitionManagementSystem.Web.Features.Attendance.SessionController.StartSessionViewModel

<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <form hx-post
          hx-controller="Session"
          hx-action="StartSession"
          hx-route-id="@Model.CourseId"
          class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Start Session</h5>
        </div>

        <div class="modal-body">
            <div class="row">
                <div class="col">
                    <label asp-for="StartAt">Start</label>

                    <div class="input-group">
                        <div class="input-group-text">
                            <i class="fa-regular fa-calendar"></i>
                        </div>
                        <input asp-for="StartAt" class="form-control"/>
                    </div>
                </div>

                <div class="col">
                    <label asp-for="EndAt">To</label>

                    <div class="input-group">
                        <div class="input-group-text">
                            <i class="fa-solid fa-calendar"></i>
                        </div>
                        <input asp-for="EndAt" class="form-control"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Start</button>
        </div>
    </form>
</div>
