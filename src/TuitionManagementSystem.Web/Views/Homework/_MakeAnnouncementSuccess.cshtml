@model TuitionManagementSystem.Web.Features.Homework.MakeAnnouncementViewModel

<div id="make-announcement-modal-@Model.CourseId"
     hx-swap-oob="delete"></div>

<div id="toast-container" hx-swap-oob="beforeend">
    <div class="toast text-bg-success border-0">
        <div class="toast-body">
            Make Announcement successful
        </div>
    </div>

    <script>
        // 🔴 关键：让 Bootstrap 正确关闭 modal（会自动清 backdrop）
        const modalEl = document.querySelector('.modal.show');
        if (modalEl) {
            const modal = bootstrap.Modal.getInstance(modalEl);
            modal?.hide();
        }

        new bootstrap.Toast(
            document.querySelector("#toast-container .toast:last-of-type")
        ).show();
    </script>
</div>
