@model TuitionManagementSystem.Web.Features.Homework.TeacherHomework.GetTeacherHomeworkResponse
@{
    ViewData["Title"] = "Homework Manage Menu";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-primary">
                <i class="bi bi-journal-bookmark-fill me-2"></i>
                Course List
            </h1>

            <p class="text-muted">@Model.TeacherInfo?.TeacherName</p>
        </div>
    </div>
    @foreach (var subject in Model.CourseInfos)
    {
        <a asp-controller="Homework" asp-action="TeacherHomeworkDashboard" asp-route-courseId="@subject.CourseId">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-primary mb-3">
                        <div class="card-header bg-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-0">@subject.SubjectName</h5>
                                    <p class="card-text mb-0">@subject.CourseName</p>
                                </div>
                                <span class="badge bg-light text-primary">Tutorial</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Course Id : @subject.CourseId </h6>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
