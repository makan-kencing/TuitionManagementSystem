@model TuitionManagementSystem.Web.Features.Homework.StudentHomework.GetStudentHomeworkResponse
@{
    ViewData["Title"] = "Student Homework Menu";
}

<body class="bg-light">
    <div class="container py-4">
        <div class="row mb-4">
            <div class="col-12">
