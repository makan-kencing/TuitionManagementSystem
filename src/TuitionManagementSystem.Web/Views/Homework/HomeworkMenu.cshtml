@model TuitionManagementSystem.Web.Features.Homework.StudentHomework.GetStudentHomeworkResponse
@{
    ViewData["Title"] = "Homework Menu";
    var timezone = TimeZoneInfo.FindSystemTimeZoneById("Asia/Kuala_Lumpur");
}


<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-primary">
                <i class="bi bi-journal-bookmark-fill me-2"></i>
                Course List
            </h1>
            <p class="text-muted">@Model.Name</p>
        </div>
    </div>
    @foreach (var course in Model.CourseInfos)
    {
        <a asp-controller="Homework" asp-action="StudentHomeworkDashboard" asp-route-courseId="@course.Id">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-primary mb-3">
                        <div class="card-header bg-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-0">@course.SubjectName</h5>
                                    <p class="card-text mb-0">@course.Name</p>
                                </div>
                                <span class="badge bg-light text-primary">Tutorial</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">@course.Teacher.Name</h6>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
