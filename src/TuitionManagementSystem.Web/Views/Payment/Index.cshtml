@using Humanizer
@using TuitionManagementSystem.Web.Features.Payment.GetPaymentDetails
@model TuitionManagementSystem.Web.Features.Payment.PaymentController.PaymentDetailsViewModel

@{
    ViewData["Title"] = "Payment Details";
    var timezone = TimeZoneInfo.FindSystemTimeZoneById("Asia/Kuala_Lumpur");
}

<a asp-controller="Invoice" asp-action="InvoiceHistory" class="btn">
    <i class="fa-solid fa-angle-left"></i>
</a>

<br/>

<div class="container-fluid py-4">
    <h3 class="mb-3"><i class="fa-solid fa-money-bill me-2"></i>Payment Summary</h3>

    <div class="d-flex gap-3 mb-4">
        <div class="card flex-fill">
            <div class="card-body">
                <h5 class="card-title">Payment</h5>
                <time datetime="@Model.Details.PaidAt">
                    @TimeZoneInfo.ConvertTimeFromUtc(Model.Details.PaidAt, timezone) (@Model.Details.PaidAt.Humanize())
                </time>
            </div>
        </div>

        <div class="card flex-fill">
            <div class="card-body">
                <h5 class="card-title">Payment Info</h5>
                <div class="card-text">
                    @switch (Model.Details.Method)
                    {
                        case CardMethod card:
                            @if (card.Brand == "visa")
                            {
                                <i class="fa-brands fa-cc-visa"></i>
                            }
                            else
                            {
                                <i class="fa-brands fa-cc-mastercard"></i>
                            }

                            <span>Ending in @card.Last4</span>
                            break;
                        case BankMethod bank:
                            <i class="fa-solid fa-building-columns"></i>

                            <span>@bank.Bank</span>
                            break;
                        case GenericMethod generic:
                            <span>@generic.Generic</span>
                            break;
                    }
                </div>

                <div class="fw-bold">Total Amount: RM @Model.Details.Amount</div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Invoices (@Model.Details.Invoices.Count)
            </h5>
        </div>

        <div class="card-body p-0">
            <div class="list-group list-group-flush">
                @foreach (var invoice in Model.Details.Invoices)
                {
                    <div class="list-group-item p-0">
                        <div class="card m-2">
                            <div class="card-body d-flex justify-content-between align-items-center p-2">
                                <div>
                                    <h5 class="fw-bold">@invoice.Name</h5>
                                    <small>for @invoice.Student.Name</small>

                                    <p class="fw-bold">Course: @invoice.Enrollment.CourseName</p>
                                </div>

                                <div class="text-end">
                                    <p class="mb-1 small text-muted">Invoiced</p>
                                    <small class="mb-1">@TimeZoneInfo.ConvertTimeFromUtc(invoice.InvoicedAt, timezone)</small>

                                    <h5>RM @invoice.Amount</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
