@model TuitionManagementSystem.Web.Models.Class.Subject
@{
    ViewData["Title"] = "Subject Archived";
}
<h2>Archive Subject</h2>

<p>Are you sure you want to archive this subject?</p>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<form asp-action="Archive" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-warning">Archive</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
