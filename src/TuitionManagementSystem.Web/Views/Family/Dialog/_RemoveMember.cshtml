@model TuitionManagementSystem.Web.Features.Family.FamilyController.RemoveMemberViewModel

<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <form hx-delete
          hx-controller="Family"
          hx-action="RemoveMember"
          hx-route-id="@Model.Id"
          class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Remove Member</h5>
        </div>

        <div class="modal-body">
            <div class="d-flex">
                <div>
                    <a href="@Model.ProfileImageUri" alt=""
                       class="rounded-circle" width="30" height="30"></a>
                </div>

                <div>
                    <h5>@Model.DisplayName (@Model.Username)</h5>
                    <p class="mb-0 text-secondary">@Model.Email</p>
                    <p class="mb-0 text-secondary">@Model.Type</p>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn text-primary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">Remove</button>
        </div>
    </form>
</div>
