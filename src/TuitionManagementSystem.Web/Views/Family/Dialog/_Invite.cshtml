@model TuitionManagementSystem.Web.Features.Family.FamilyController.InviteFamilyViewModel

<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <form hx-post
          hx-controller="Family"
          hx-action="Invite"
          class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Invite your family</h5>
        </div>

        <div class="modal-body">
            <p>You can invite anyone with their username.</p>

            <div class="form-floating mt-3">
                <input asp-for="Username" class="form-control"/>
                <label asp-for="Username"></label>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="text-primary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Send</button>
        </div>
    </form>
</div>
