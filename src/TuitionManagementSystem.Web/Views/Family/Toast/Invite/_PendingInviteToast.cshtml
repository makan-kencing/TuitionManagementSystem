<div id="toast-container" hx-swap-oob="beforeend">
    <div class="toast align-items-center text-bg-danger text-white border-0"
         role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                An pending invite has already been sent to the user.
            </div>

            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>

    <script>
        new bootstrap.Toast(document.querySelector("#toast-container .toast:last-of-type")).show();
    </script>
</div>
