@model List<TuitionManagementSystem.Web.Features.Enrollment.ViewTeacherCourses.ViewTeacherCoursesResponse>

@{
    ViewData["Title"] = "My Courses";
    Layout = "_Layout";
}

@section Styles {
<style>
    .course-card {
        border-radius: 1rem;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

    .course-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .course-header {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border-radius: 1rem 1rem 0 0;
        padding: 1rem;
    }

    .course-stat {
        font-size: 0.9rem;
        color: #6c757d;
    }
</style>
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <h2 class="mb-1">
            <i class="fas fa-book-open me-2"></i>My Courses
        </h2>
        <p class="text-muted">Courses assigned to you and their enrollments</p>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">No Courses Assigned</h5>
            </div>
        }
        else
        {
            foreach (var course in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card course-card">
                        <div class="course-header">
                            <h5 class="mb-0">
                                <i class="fas fa-chalkboard-teacher me-2"></i>
                                @course.CourseName
                            </h5>
                            <small>@course.SubjectName</small>
                        </div>

                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3">
                                <div>
                                    <div class="fw-bold">@course.TotalStudents</div>
                                    <div class="course-stat">Enrolled Students</div>
                                </div>
                                <div>
                                    <i class="fas fa-users fa-2x text-primary"></i>
                                </div>
                            </div>

                            <a href="/enrollment/course/@course.CourseId"
                               class="btn btn-outline-primary w-100">
                                <i class="fas fa-eye me-1"></i>
                                View Enrollments
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
