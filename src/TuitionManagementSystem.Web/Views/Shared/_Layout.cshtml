@using TuitionManagementSystem.Web.Models.User
@using TuitionManagementSystem.Web.Services.Auth.Constants
@using TuitionManagementSystem.Web.Services.Auth.Extensions

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TuitionManagementSystem</title>

    <script type="importmap"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
          integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.0/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TuitionManagementSystem.Web.styles.css" asp-append-version="true"/>
</head>

@await RenderSectionAsync("Styles", required: false)

<body>
<header>
    <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid">
            <button class="btn btn-outline-secondary me-2"
                    id="sidebarToggle"
                    type="button">
                <i class="fa-solid fa-bars"></i>
            </button>

            <a class="navbar-brand"
               asp-controller="Home"
               asp-action="Index">
                TuitionManagementSystem
            </a>

            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1"></ul>
            </div>

            <div class="d-flex align-items-center gap-2">
                @if (User.Identity!.IsAuthenticated)
                {
                    <div class="dropdown">
                        <a class="btn btn-outline-secondary dropdown-toggle"
                           hx-get
                           hx-controller="Notification"
                           hx-action="GetNotifications"
                           hx-target="#notification-drawer"
                           hx-trigger="load"
                           data-bs-toggle="dropdown">
                            <i class="fa-solid fa-bell"></i>
                            <span id="notification-badge"></span>
                        </a>

                        <div id="notification-drawer"
                             class="dropdown-menu dropdown-menu-end"></div>
                    </div>

                    <div class="dropdown">
                        <a class="btn btn-outline-secondary dropdown-toggle"
                           href="#"
                           data-bs-toggle="dropdown">
                            @if (User.GetProfileImageUri() != null)
                            {
                                <img src="@User.GetProfileImageUri()"
                                     class="rounded-circle"
                                     width="30"
                                     height="30"
                                     alt="Profile"/>
                            }
                            else
                            {
                                <i class="fa-solid fa-user"></i>
                            }
                            <span class="ms-2">@User.GetDisplayName()</span>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Account"
                                   asp-action="AccountProfile">
                                    My Account
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Attendance"
                                   asp-action="Summary">
                                    My Attendances
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Invoice"
                                   asp-action="ListInvoices">
                                    My Bills
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Invoice"
                                   asp-action="InvoiceHistory">
                                    Billing History
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Family"
                                   asp-action="Index">
                                    My Family
                                </a>
                            </li>

                            <li><hr class="dropdown-divider"/></li>

                            <li>
                                <form asp-controller="Authentication" asp-action="Logout">
                                    <button type="submit" class="dropdown-item">
                                        Sign Out
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a asp-controller="Authentication"
                       asp-action="Login"
                       class="btn btn-primary">
                        Sign In
                    </a>
                }
            </div>
        </div>
    </nav>
</header>

<main class="app-layout sidebar-collapsed" id="appLayout">
    <aside class="sidebar p-3">
        <ul class="nav nav-pills flex-column gap-1">

            @if (User.Identity!.IsAuthenticated)
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Homework" asp-action="Index">
                        <i class="fa-solid fa-file-lines me-2"></i> Homework
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Enrollment" asp-action="ViewEnrollments">
                        <i class="fa-solid fa-users me-2"></i> Enrollments
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Attendance" asp-action="CourseSessionListing">
                        <i class="fa-solid fa-calendar-check me-2"></i> Attendance
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Schedule" asp-action="Index">
                        <i class="fa-solid fa-calendar me-2"></i> Schedule
                    </a>
                </li>

                @if (User.IsInRole(nameof(AccessRoles.Administrator)))
                {
                    <li class="nav-item mt-3"><hr /></li>

                    <li class="nav-item text-muted fw-bold">
                        <span class="ps-2">Admin Management</span>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Course" asp-action="Index">
                            <i class="fa-solid fa-book me-2"></i> Courses
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Teacher" asp-action="Index">
                            <i class="fa-solid fa-chalkboard-user me-2"></i> Teachers
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Parent" asp-action="Index">
                            <i class="fa-solid fa-user-group me-2"></i> Parents
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Student" asp-action="Index">
                            <i class="fa-solid fa-user-graduate me-2"></i> Students
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Subject" asp-action="Index">
                            <i class="fa-solid fa-book-open me-2"></i> Subjects
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Classroom" asp-action="Index">
                            <i class="fa-solid fa-house me-2"></i> Classrooms
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Schedule" asp-action="Index">
                            <i class="fa-solid fa-calendar me-2"></i> Schedule
                        </a>
                    </li>
                }
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link"
                       asp-controller="Authentication"
                       asp-action="Login">
                        <i class="fa-solid fa-right-to-bracket me-2"></i> Sign In
                    </a>
                </li>
            }
        </ul>
    </aside>

    <section class="app-content p-3">
        @RenderBody()
    </section>
</main>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - TuitionManagementSystem
    </div>
</footer>

<!-- JS -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/htmx/dist/htmx.min.js"></script>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const toggleBtn = document.getElementById("sidebarToggle");
        const layout = document.getElementById("appLayout");

        toggleBtn.addEventListener("click", function () {
            layout.classList.toggle("sidebar-collapsed");
        });
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
