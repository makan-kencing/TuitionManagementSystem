@using TuitionManagementSystem.Web.Services.Auth.Constants
@using TuitionManagementSystem.Web.Services.Auth.Extensions

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TuitionManagementSystem</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
          crossorigin="anonymous"/>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TuitionManagementSystem.Web.styles.css" asp-append-version="true"/>
</head>

<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">

            <!-- Sidebar toggle (always visible) -->
            <button class="btn btn-outline-secondary me-2"
                    id="sidebarToggle"
                    type="button">
                <i class="fa-solid fa-bars"></i>
            </button>

            <a class="navbar-brand"
               asp-controller="Home"
               asp-action="Index">
                TuitionManagementSystem
            </a>

            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Course" asp-action="Index">Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Coursework" asp-action="Index">Courseworks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Teacher" asp-action="Index">Teachers</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Subject" asp-action="Index">Subjects</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Classroom" asp-action="Index">Classroom</a>
                    </li>
                </ul>
            </div>

            <div class="d-flex align-items-center gap-2">
                @if (User.Identity!.IsAuthenticated)
                {
                    <a class="btn btn-outline-secondary"
                       asp-controller="Notification"
                       asp-action="Index">
                        <i class="fa-solid fa-bell"></i>
                    </a>

                    <div class="dropdown">
                        <a class="btn btn-outline-secondary dropdown-toggle"
                           href="#"
                           data-bs-toggle="dropdown">
                            @if (User.GetProfileImageUri() != null)
                            {
                                <img src="@User.GetProfileImageUri()"
                                     alt=""
                                     class="rounded-circle"
                                     width="30"
                                     height="30"/>
                            }
                            else
                            {
                                <i class="fa-solid fa-user"></i>
                            }
                            <span class="ms-2">@User.GetDisplayName()</span>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Profile"
                                   asp-action="Index">
                                    My Account
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Enrollment"
                                   asp-action="Index">
                                    Enrollments
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Attendance"
                                   asp-action="Summary">
                                    Attendance
                                </a>
                            </li>

                            @if (User.IsInRole(nameof(AccessRoles.Administrator)))
                            {
                                <li><hr class="dropdown-divider"/></li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Admin"
                                       asp-action="Index">
                                        Admin Panel
                                    </a>
                                </li>
                            }

                            <li><hr class="dropdown-divider"/></li>
                            <li>
                                <form asp-controller="Authentication" asp-action="Logout">
                                    <button type="submit"
                                            class="dropdown-item">
                                        Sign Out
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a asp-controller="Authentication"
                       asp-action="Login"
                       class="btn btn-primary">
                        Sign In
                    </a>
                }
            </div>
        </div>
    </nav>
</header>

<!-- MAIN LAYOUT -->
<div class="app-layout @(User.Identity!.IsAuthenticated ? "" : "sidebar-collapsed")"
     id="appLayout">

    <!-- SIDEBAR (always exists) -->
    <aside class="sidebar p-3">
        @if (User.Identity!.IsAuthenticated)
        {
            <ul class="nav nav-pills flex-column gap-1">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house me-2"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Course" asp-action="Index">
                        <i class="fa-solid fa-book me-2"></i> Courses
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Coursework" asp-action="Index">
                        <i class="fa-solid fa-file-lines me-2"></i> Courseworks
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Teacher" asp-action="Index">
                        <i class="fa-solid fa-chalkboard-user me-2"></i> Teachers
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Enrollment" asp-action="Index">
                        <i class="fa-solid fa-users me-2"></i> Enrollments
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Attendance" asp-action="Summary">
                        <i class="fa-solid fa-calendar-check me-2"></i> Attendance
                    </a>
                </li>

                @if (User.IsInRole(nameof(AccessRoles.Administrator)))
                {
                    <li><hr/></li>
                    <li class="nav-item">
                        <a class="nav-link text-danger"
                           asp-controller="Admin"
                           asp-action="Index">
                            <i class="fa-solid fa-gear me-2"></i> Admin Panel
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <ul class="nav nav-pills flex-column gap-1">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house me-2"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Course" asp-action="Index">
                        <i class="fa-solid fa-book me-2"></i> Courses
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"
                       asp-controller="Authentication"
                       asp-action="Login">
                        <i class="fa-solid fa-right-to-bracket me-2"></i> Sign In
                    </a>
                </li>
            </ul>
        }
    </aside>

    <!-- CONTENT -->
    <main class="app-content">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - TuitionManagementSystem
    </div>
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const toggleBtn = document.getElementById("sidebarToggle");
        const layout = document.getElementById("appLayout");

        toggleBtn.addEventListener("click", function () {
            layout.classList.toggle("sidebar-collapsed");
        });
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
