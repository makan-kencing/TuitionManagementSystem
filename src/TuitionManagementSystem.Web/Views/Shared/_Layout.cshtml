@using TuitionManagementSystem.Web.Models.User
@using TuitionManagementSystem.Web.Services.Auth.Constants
@using TuitionManagementSystem.Web.Services.Auth.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Horizon Tuition Center</title>

    <script type="importmap"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
          integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.0/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TuitionManagementSystem.Web.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
</head>

@await RenderSectionAsync("Styles", required: false)

<body>
<header>
    <nav class="navbar navbar-expand-md navbar-light">
        <div class="container-fluid px-3">
            <button class="btn btn-outline-secondary me-2" id="sidebarToggle" type="button" aria-label="Toggle sidebar">
                <i class="fa-solid fa-bars"></i>
            </button>

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="/assets/img/logo.png" alt="Logo"/>
                Horizon Tuition Center
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between"></div>

            <div class="d-flex align-items-center gap-2">
                @if (User.Identity!.IsAuthenticated)
                {
                    <button class="btn btn-outline-secondary position-relative"
                       hx-get
                       hx-controller="Notification" hx-action="GetNotifications"
                       hx-target="#notification-drawer"
                       data-bs-toggle="dropdown"
                       aria-label="Notifications">
                        <i class="fa-solid fa-bell"></i>
                        <span id="notification-badge"></span>
                    </button>

                    <div id="notification-drawer" class="dropdown-menu dropdown-menu-end"></div>

                    <div class="dropdown">
                        <a class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                            @if (User.GetProfileImageUri() != null)
                            {
                                <img src="@User.GetProfileImageUri()" class="rounded-circle" width="30" height="30" alt="Profile"/>
                            }
                            else
                            {
                                <i class="fa-solid fa-user-circle me-1"></i>
                            }
                            <span class="ms-1 d-none d-md-inline">@User.GetDisplayName()</span>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="AccountProfile"><i class="fa-solid fa-user-gear me-2"></i>My Account</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="ManageSession"><i class="fa-solid fa-key me-2"></i>Manage Sessions</a></li>

                            @if (User.GetUserType() == nameof(Teacher) || User.GetUserType() == nameof(Student))
                            {
                                <li><a class="dropdown-item" asp-controller="Homework" asp-action="Index"><i class="fa-solid fa-book me-2"></i>My Classes</a></li>
                            }
                            @if (User.GetUserType() == nameof(Student))
                            {
                                <li><a class="dropdown-item" asp-controller="Attendance" asp-action="Index"><i class="fa-solid fa-calendar-check me-2"></i>My Attendances</a></li>
                                <li><a class="dropdown-item" asp-controller="Invoice" asp-action="ListInvoices"><i class="fa-solid fa-file-invoice-dollar me-2"></i>My Bills</a></li>
                                <li><a class="dropdown-item" asp-controller="Invoice" asp-action="InvoiceHistory"><i class="fa-solid fa-history me-2"></i>Billing History</a></li>
                            }
                            @if (User.GetUserType() == nameof(Student) || User.GetUserType() == nameof(Parent))
                            {
                                <li><a class="dropdown-item" asp-controller="Family" asp-action="Index"><i class="fa-solid fa-users me-2"></i>My Family</a></li>
                            }
                            <li><hr class="dropdown-divider"/></li>
                            <li>
                                <form asp-controller="Authentication" asp-action="Logout">
                                    <button type="submit" class="dropdown-item text-danger"><i class="fa-solid fa-right-from-bracket me-2"></i>Sign Out</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a asp-controller="Authentication" asp-action="Login" class="btn btn-primary px-3">Sign In</a>
                }
            </div>
        </div>
    </nav>
</header>

<!-- Marquee Section -->
<div class="marquee-container bg-primary text-white py-2" style="overflow: hidden;">
    <div class="marquee-content d-flex">
        <span class="marquee-item px-4">
            <i class="fas fa-calendar-check me-2"></i>Mid-term exams starting next week!
        </span>
        <span class="marquee-item px-4">
            <i class="fas fa-book me-2"></i>New Math & Science courses now open for enrollment!
        </span>
        <span class="marquee-item px-4">
            <i class="fas fa-star me-2"></i>Student of the Month: Daren Tan - Excellent improvement!
        </span>
        <span class="marquee-item px-4">
            <i class="fas fa-chalkboard-teacher me-2"></i>Parent-Teacher meetings scheduled for Friday!
        </span>
        <span class="marquee-item px-4">
            <i class="fas fa-graduation-cap me-2"></i>Summer program registration opens March 1st!
        </span>
        @* Loop 2 *@
        <span class="marquee-item px-4">
            <i class="fas fa-calendar-check me-2"></i>Mid-term exams starting next week!
        </span>
        <span class="marquee-item px-4">
            <i class="fas fa-book me-2"></i>New Math & Science courses now open for enrollment!
        </span>
        <span class="marquee-item px-4">
            <i class="fas fa-star me-2"></i>Student of the Month: Daren Tan - Excellent improvement!
        </span>
        <span class="marquee-item px-4">
            <i class="fas fa-chalkboard-teacher me-2"></i>Parent-Teacher meetings scheduled for Friday!
        </span>
        <span class="marquee-item px-4">
            <i class="fas fa-graduation-cap me-2"></i>Summer program registration opens March 1st!
        </span>
    </div>
</div>

<!-- Sidebar -->
<aside class="sidebar">
    <div class="sidebar-header">
        <img src="/assets/img/logo.png" alt="Logo">
        <span>Horizon Tuition Center</span>
    </div>
    <hr/>
    <ul class="nav nav-pills flex-column gap-1 p-3">
        @if (User.Identity!.IsAuthenticated)
        {
            <li class="nav-item text-muted fw-bold">
            <span class="ps-2">@(User.GetUserType() == nameof(Student) ? "Student Dashboard" : "Teacher Dashboard")</span></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Homework" asp-action="Index"><i class="fa-solid fa-file-lines"></i>Homework</a></li>
            if (User.GetUserType() == nameof(Teacher))
            {
                <li class="nav-item"><a class="nav-link" asp-controller="Enrollment" asp-action="ViewTeacherCourses"><i class="fa-solid fa-users"></i>Course Enrollments</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Session" asp-action="ViewDaily"><i class="fa-solid fa-calendar-check"></i>Today Sessions</a></li>
            }
            else
            {
                <li class="nav-item"><a class="nav-link" asp-controller="Enrollment" asp-action="ViewEnrollments"><i class="fa-solid fa-users"></i>Enrollments</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Attendance" asp-action="TakeAttendance"><i class="fa-solid fa-calendar-check"></i>Attendance</a></li>
            }
            <li class="nav-item"><a class="nav-link" href="/schedules/calendar"><i class="fa-solid fa-calendar-days"></i>Schedule</a></li>

            if (User.IsInRole(nameof(AccessRoles.Administrator)))
            {
                <li class="nav-item mt-4"><hr/></li>
                <li class="nav-item text-muted fw-bold"><span class="ps-2">Admin Management</span></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Course" asp-action="Index"><i class="fa-solid fa-book"></i>Courses</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Teacher" asp-action="Index"><i class="fa-solid fa-chalkboard-user"></i>Teachers</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Parent" asp-action="Index"><i class="fa-solid fa-user-group"></i>Parents</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="Index"><i class="fa-solid fa-user-graduate"></i>Students</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Subject" asp-action="Index"><i class="fa-solid fa-book-open"></i>Subjects</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Classroom" asp-action="Index"><i class="fa-solid fa-house-chimney"></i>Classrooms</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Schedule" asp-action="Index"><i class="fa-solid fa-calendar-days"></i>Manage Schedule</a></li>
            }
        }
        else
        {
            <li class="nav-item"><a class="nav-link" asp-controller="Authentication" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i>Sign In</a></li>
        }
    </ul>
</aside>

<div id="sidebar-backdrop"></div>

<main>
    <div class="app-content">
        @RenderBody()
    </div>
</main>

<div id="modal" class="modal modal-blur fade"
     aria-hidden="false"
     tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content"></div>
    </div>
</div>

<div id="toast-container" class="toast-container position-fixed bottom-0 end-0 p-3">
</div>

<footer class="border-top">
    <div class="container">&copy; 2025 - Horizon Tuition Center</div>
</footer>

<!-- JS -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/htmx/dist/htmx.min.js"></script>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const toggleBtn = document.getElementById("sidebarToggle");
        const sidebar = document.querySelector(".sidebar");
        const backdrop = document.getElementById("sidebar-backdrop");

        function openSidebar() {
            sidebar.classList.add("active");
            backdrop.classList.add("active");
            document.body.style.overflow = 'hidden';
        }

        function closeSidebar() {
            sidebar.classList.remove("active");
            backdrop.classList.remove("active");
            document.body.style.overflow = '';
        }

        toggleBtn.addEventListener("click", function () {
            sidebar.classList.contains("active") ? closeSidebar() : openSidebar();
        });

        backdrop.addEventListener("click", closeSidebar);

        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape' && sidebar.classList.contains('active')) {
                closeSidebar();
            }
        });

        const marqueeContent = document.querySelector('.marquee-content');
        if (marqueeContent) {
            // Ensure smooth restart when animation completes
            marqueeContent.addEventListener('animationiteration', () => {
                // Reset to start position without visible jump
                marqueeContent.style.animation = 'none';
                setTimeout(() => {
                    marqueeContent.style.animation = 'marquee 30s linear infinite';
                }, 10);
            });
        }
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
