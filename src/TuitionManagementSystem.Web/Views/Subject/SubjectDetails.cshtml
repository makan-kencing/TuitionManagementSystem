@model TuitionManagementSystem.Web.Features.Subject.SubjectResponse
@{
    ViewData["Title"] = "Subject Details";
    bool isActive = Model.DeletedAt == null;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-journal-bookmark-fill me-2"></i>Subject Details
                    </h5>
                    @if(isActive)
                    {
                        <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2 rounded-pill">
                            <i class="bi bi-check-circle-fill me-1"></i> Active
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary px-3 py-2 rounded-pill">
                            <i class="bi bi-archive-fill me-1"></i> Archived
                        </span>
                    }
                </div>

                <div class="card-body p-4">

                    <div class="mb-4">
                        <label class="small text-muted text-uppercase fw-bold mb-1">Subject Name</label>
                        <div class="d-flex align-items-center">
                            <div class="icon-square bg-primary bg-opacity-10 text-primary rounded-2 me-3 p-2">
                                <i class="bi bi-collection fs-3"></i>
                            </div>
                            <h2 class="fw-bold text-dark mb-0">@Model.Name</h2>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 my-4">

                    <div class="mb-2">
                        <label class="small text-muted text-uppercase fw-bold mb-2">Description</label>
                        <div class="p-4 bg-light rounded-3 text-secondary border border-light">
                            @if(string.IsNullOrEmpty(Model.Description))
                            {
                                <span class="fst-italic text-muted opacity-75">
                                    <i class="bi bi-text-left me-2"></i>No description provided for this subject.
                                </span>
                            }
                            else
                            {
                                @Model.Description
                            }
                        </div>
                    </div>

                    @if(!isActive)
                    {
                        <div class="mt-3 text-end">
                            <small class="text-danger fst-italic">
                                <i class="bi bi-info-circle me-1"></i>
                                This subject was archived on @Model.DeletedAt?.ToShortDateString()
                            </small>
                        </div>
                    }
                </div>

                <div class="card-footer bg-white py-3 border-top">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                            <i class="bi bi-pencil-square me-1"></i> Edit Subject
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
