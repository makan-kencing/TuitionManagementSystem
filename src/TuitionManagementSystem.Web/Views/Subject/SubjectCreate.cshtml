@model TuitionManagementSystem.Web.ViewModels.Subject.SubjectFormVm
@{
    ViewData["Title"] = "Create Subject";
}

<h2>Create Subject</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    @* Now the Model being passed here is a SubjectFormVm, which matches the Partial *@
    @await Html.PartialAsync("_Form", Model)

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

