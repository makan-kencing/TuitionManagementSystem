@model IEnumerable<TuitionManagementSystem.Web.Features.Course.CourseResponse>
@{
    ViewData["Title"] = "Courses";
}
<h2>Courses</h2>
<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Subject</th>
        <th>Preferred Classroom</th>
        <th>Price</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.SubjectName</td>
            <td>@c.PreferredClassroomLocation</td>
            <td>@c.Price.ToString("C")</td>
            <td>
                <a asp-action="Details" asp-route-id="@c.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@c.Id">Edit</a> |
                <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link text-danger p-0">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
