
@model IReadOnlyList<TuitionManagementSystem.Web.Features.Course.CourseIndexRowResponse>

@using Microsoft.AspNetCore.WebUtilities
@using System.Collections.Generic
@using System.Linq

@{
    ViewData["Title"] = "Courses";
    var subjects = (IEnumerable<SelectListItem>)ViewBag.Subjects;
    var classrooms = (IEnumerable<SelectListItem>)ViewBag.Classrooms;
    var teachers = (IEnumerable<SelectListItem>)ViewBag.Teachers;
}

<style>

    .row-changed {
        background-color: #fff8e1 !important;
        transition: background-color 0.3s ease;
    }

    .teacher-subtext {
        font-size: .85rem;
        color: #6c757d;
        margin-top: .25rem;
    }

    .table-sm th, .table-sm td { padding: .45rem .75rem; }

    .action-cell .action-buttons a { min-width: 64px; }
    #bulkActionBar {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: white;
        box-shadow: 0 -4px 10px rgba(0,0,0,0.1);
        z-index: 1000;
        transform: translateY(100%);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border-top: 1px solid #dee2e6;
    }

    #bulkActionBar.visible {
        transform: translateY(0);
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h3 mb-0 text-gray-800">Course Management</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Create New Course
    </a>
</div>

<div class="card mb-3">
    <div class="card-body p-3">
        <form method="get" class="row g-3 align-items-end mb-0" id="filterForm">
    <div class="col-md-3">
        <label for="subjectFilter" class="form-label mb-1">Subject</label>
        <select id="subjectFilter" name="subjectId" class="form-select form-select-sm">
            <option value="">All Subjects</option>
            @foreach (var s in subjects)
            {
                <option value="@s.Value" selected="@(ViewContext.HttpContext.Request.Query["subjectId"] == s.Value ? "selected" : null)">@s.Text</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <label for="classroomFilter" class="form-label mb-1">Classroom</label>
        <select id="classroomFilter" name="classroomId" class="form-select form-select-sm">
            <option value="">All Classrooms</option>
            @foreach (var c in classrooms)
            {
                <option value="@c.Value" selected="@(ViewContext.HttpContext.Request.Query["classroomId"] == c.Value ? "selected" : null)">@c.Text</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <label for="teacherFilter" class="form-label mb-1">Teacher</label>
        <select id="teacherFilter" name="teacherId" class="form-select form-select-sm">
            <option value="">All Teachers</option>
            @foreach (var t in teachers)
            {
                <option value="@t.Value" selected="@(ViewContext.HttpContext.Request.Query["teacherId"] == t.Value ? "selected" : null)">@t.Text</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <label for="pageSize" class="form-label mb-1">Page Size</label>
        <select id="pageSize" name="pageSize" class="form-select form-select-sm">
            @{ var currentSize = ViewContext.HttpContext.Request.Query["pageSize"].ToString();
               if (string.IsNullOrEmpty(currentSize) && ViewBag.PageSize != null) currentSize = ViewBag.PageSize.ToString(); }
            <option value="10" selected="@(currentSize == "10" ? "selected" : null)">10</option>
            <option value="15" selected="@(currentSize == "15" ? "selected" : null)">15</option>
            <option value="20" selected="@(currentSize == "20" ? "selected" : null)">20</option>
            <option value="25" selected="@(currentSize == "25" ? "selected" : null)">25</option>
        </select>
    </div>
    <input type="hidden" name="page" value="1" id="pageInput" />
    <div class="col-md-1 d-flex align-items-center">
        <div class="d-grid gap-2">
            <button type="button"
                    class="btn btn-light btn-sm text-danger border-danger border-opacity-25 shadow-sm fw-bold"
                    onclick="window.resetFilters()">
                Clear Filters
            </button>
        </div>
    </div>
        </form>
    </div>
</div>
<form id="antiForgeryForm" method="post" class="d-none">
    @Html.AntiForgeryToken()
</form>

<div class="card border-0 shadow-sm rounded-3">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-sm align-middle mb-0">
                <thead class="bg-light">
                <tr>
                    <th class="ps-4 py-3">Name</th>
                    <th class="py-3">Subject</th>
                    <th class="py-3">Preferred Classroom</th>
                    <th class="py-3">Teacher</th>
                    <th class="py-3">Price</th>
                    <th class="text-center py-3">Actions</th>
                </tr>
                </thead>

                <tbody>
                @foreach (var c in Model)
                {
                    <tr data-row-id="@c.Id">
                        <td class="ps-4 fw-bold text-dark">@c.Name</td>

                        <td>
                            <select class="form-select form-select-sm course-input subject-select"
                                    style="max-width: 160px;"
                                    data-course-id="@c.Id"
                                    data-original="@c.SubjectId">
                                @foreach (var s in subjects)
                                {
                                    <option value="@s.Value" selected="@(s.Value == c.SubjectId.ToString() ? "selected" : null)">
                                        @s.Text
                                    </option>
                                }
                            </select>
                        </td>

                        <td>
                            <select class="form-select form-select-sm course-input classroom-select"
                                    style="max-width: 140px;"
                                    data-course-id="@c.Id"
                                    data-original="@c.PreferredClassroomId">
                                @foreach (var r in classrooms)
                                {
                                    <option value="@r.Value" selected="@(r.Value == c.PreferredClassroomId.ToString() ? "selected" : null)">
                                        @r.Text
                                    </option>
                                }
                            </select>
                        </td>

                        <td>
                            <select class="form-select form-select-sm course-input teacher-select"
                                    style="max-width: 180px;"
                                    data-course-id="@c.Id"
                                    data-original="@(c.TeacherId?.ToString() ?? "")">
                                <option value="">-- Select --</option>
                                @foreach (var t in teachers)
                                {
                                    <option value="@t.Value" selected="@(c.TeacherId?.ToString() == t.Value ? "selected" : null)">
                                        @t.Text
                                    </option>
                                }
                            </select>
                            <div class="teacher-subtext">
                                @(string.IsNullOrEmpty(c.TeacherNames) ? "No teacher assigned" : c.TeacherNames)
                            </div>
                        </td>

                        <td class="fw-medium">@c.Price.ToString("0.00")</td>

                        <td class="action-cell text-center">
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <div class="btn-group btn-group-sm action-buttons">
                                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-outline-secondary px-3">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-outline-danger px-3">Delete</a>
                                </div>

                                <button type="button"
                                        class="btn btn-sm btn-warning text-white btn-update-row shadow-sm"
                                        style="display:none;"
                                        onclick="saveRowChanges(@c.Id)">
                                    Update
                                </button>

                                <button type="button"
                                        class="btn btn-sm btn-light border btn-reset-row"
                                        style="display:none;"
                                        onclick="resetRowChanges(@c.Id)">
                                    <i class="bi bi-x-lg"></i>
                                </button>

                                <div class="spinner-border spinner-border-sm text-primary row-spinner"
                                     style="display:none;"
                                     role="status">
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <div id="bulkActionBar" class="p-3">
        <div class="container d-flex justify-content-between align-items-center">

            <div class="d-flex align-items-center">
                <div class="bg-warning text-dark rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                    <i class="bi bi-pencil-fill"></i>
                </div>
                <div>
                    <h6 class="mb-0 fw-bold">Changes Made</h6>
                    <small class="text-muted">You have modified <span id="changeCount">0</span> row(s).</small>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="button" class="btn btn-light border" onclick="discardAllChanges()">
                    Discard
                </button>
                <button type="button" class="btn btn-warning text-dark fw-bold px-4 shadow-sm" id="btnSaveAll" onclick="saveAllChanges()">
                    <span class="normal-text">Save Changes</span>
                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Pagination Controls -->
@{
    int pageSize = 10;
    var qsPageSize = ViewContext.HttpContext.Request.Query["pageSize"].ToString();
    if (!string.IsNullOrEmpty(qsPageSize) && int.TryParse(qsPageSize, out var ps)) pageSize = ps;
    else if (ViewBag.PageSize != null) pageSize = (int)ViewBag.PageSize;

    int totalCount = ViewBag.TotalCount ?? Model.Count;
    int totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
    int page = 1;
    var qsPage = ViewContext.HttpContext.Request.Query["page"].ToString();
    if (!string.IsNullOrEmpty(qsPage)) int.TryParse(qsPage, out page);
    if (page < 1) page = 1;
    if (page > totalPages) page = totalPages;

    var currentQuery = ViewContext.HttpContext.Request.Query.ToDictionary(k => k.Key, v => v.Value.ToString());
    Func<int, string> buildPageUrl = (p) =>
    {
        var q = new Dictionary<string, string>(currentQuery, StringComparer.OrdinalIgnoreCase);
        q["page"] = p.ToString();
        q["pageSize"] = pageSize.ToString();
        return QueryHelpers.AddQueryString(ViewContext.HttpContext.Request.Path.Value ?? "/", q);
    };
}

<nav aria-label="Course pagination" class="mt-3">
    <ul class="pagination justify-content-center">
        <li class="page-item @(page == 1 ? "disabled" : null)">
            <a class="page-link" href="@buildPageUrl(page - 1)">Previous</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == page ? "active" : null)">
                <a class="page-link" href="@buildPageUrl(i)">@i</a>
            </li>
        }
        <li class="page-item @(page == totalPages ? "disabled" : null)">
            <a class="page-link" href="@buildPageUrl(page + 1)">Next</a>
        </li>
    </ul>
</nav>

@section Scripts {
<script>
(() => {
    const token = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]').value;
    const actionBar = document.getElementById('bulkActionBar');
    const changeCountLabel = document.getElementById('changeCount');
    let changedRowIds = new Set();

    async function postJson(url, body) {
        return await fetch(url, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            },
            body: JSON.stringify(body)
        });
    }

    function checkForChanges() {
        changedRowIds.clear();
        const allRows = document.querySelectorAll('tbody tr');

        allRows.forEach(row => {
            const rowId = row.dataset.rowId;
            let isRowChanged = false;

            row.querySelectorAll('.course-input').forEach(input => {
                if (input.value !== input.dataset.original) {
                    isRowChanged = true;
                }
            });


            const resetBtn = row.querySelector('.btn-reset-row');
            if (isRowChanged) {
                changedRowIds.add(rowId);
                row.classList.add('row-changed');
                if (resetBtn) resetBtn.style.display = '';
            } else {
                row.classList.remove('row-changed');
                if (resetBtn) resetBtn.style.display = 'none';
            }
        });

        updateActionBarVisibility();
    }

    function updateActionBarVisibility() {
        changeCountLabel.innerText = changedRowIds.size;

        if (changedRowIds.size > 0) {
            actionBar.classList.add('visible');
        } else {
            actionBar.classList.remove('visible');
        }
    }

    window.discardAllChanges = () => {
        if (!confirm("Discard all pending changes?")) return;

        changedRowIds.forEach(id => {
            const row = document.querySelector(`tr[data-row-id="${id}"]`);
            row.querySelectorAll('.course-input').forEach(input => {
                input.value = input.dataset.original;
            });
            row.classList.remove('row-changed');
            const resetBtn = row.querySelector('.btn-reset-row');
            if (resetBtn) resetBtn.style.display = 'none';
        });

        changedRowIds.clear();
        updateActionBarVisibility();
    };

    window.saveAllChanges = async () => {
        const btn = document.getElementById('btnSaveAll');
        const spinner = btn.querySelector('.spinner-border');
        const text = btn.querySelector('.normal-text');

        btn.disabled = true;
        spinner.classList.remove('d-none');
        text.innerText = "Saving...";

        try {
            const promises = [];

            changedRowIds.forEach(id => {
                const row = document.querySelector(`tr[data-row-id="${id}"]`);
                const subEl = row.querySelector('.subject-select');
                const classEl = row.querySelector('.classroom-select');
                const teachEl = row.querySelector('.teacher-select');

                const lookupsModified = subEl.value !== subEl.dataset.original ||
                    classEl.value !== classEl.dataset.original;
                const teacherModified = teachEl.value !== teachEl.dataset.original;

                if (lookupsModified) {
                    promises.push(
                        postJson(`/courses/${id}/inline-lookups`, {
                            subjectId: Number(subEl.value),
                            preferredClassroomId: Number(classEl.value)
                        }).then(res => {
                            if(res.ok) {
                                subEl.dataset.original = subEl.value;
                                classEl.dataset.original = classEl.value;
                            }
                        })
                    );
                }

                if (teacherModified) {
                    promises.push(
                        postJson(`/courses/${id}/inline-teacher`, {
                            teacherId: teachEl.value ? Number(teachEl.value) : null
                        }).then(res => {
                            if(res.ok) {
                                teachEl.dataset.original = teachEl.value;
                            }
                        })
                    );
                }
            });

            await Promise.all(promises);

            changedRowIds.clear();
            document.querySelectorAll('.row-changed').forEach(r => r.classList.remove('row-changed'));
            updateActionBarVisibility();
            alert("Changes saved successfully!");

        } catch (err) {
            console.error(err);
            alert("Error saving changes. Check console.");
        } finally {
            btn.disabled = false;
            spinner.classList.add('d-none');
            text.innerText = "Save Changes";
        }
    };

    document.querySelectorAll('.course-input').forEach(input => {
        input.addEventListener('change', checkForChanges);
    });
    checkForChanges();

    const filterForm = document.getElementById('filterForm');
    if (filterForm) {
        filterForm.querySelectorAll('select').forEach(s => {
            s.addEventListener('change', () => {
                const pageInput = document.getElementById('pageInput');
                if (pageInput) pageInput.value = '1';
                filterForm.submit();
            });
        });
    }

    window.resetRowChanges = (id) => {
        const row = document.querySelector(`tr[data-row-id="${id}"]`);
        if (!row) return;

        row.querySelectorAll('.course-input').forEach(input => {
            input.value = input.dataset.original ?? '';
            input.dispatchEvent(new Event('change'));
        });

        const resetBtn = row.querySelector('.btn-reset-row');
        if (resetBtn) resetBtn.style.display = 'none';
        row.classList.remove('row-changed');

        changedRowIds.delete(String(id));
        updateActionBarVisibility();
    };

    window.resetFilters = () => {
        if (!filterForm) return;
        filterForm.querySelectorAll('select').forEach(s => s.value = '');
        const pageInput = document.getElementById('pageInput');
        if (pageInput) pageInput.value = '1';
        filterForm.submit();
    };
})();
</script>
}
