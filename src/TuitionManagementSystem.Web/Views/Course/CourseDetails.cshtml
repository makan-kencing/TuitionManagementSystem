@model TuitionManagementSystem.Web.Features.Course.CourseResponse
@{
    ViewData["Title"] = "Course Details";
}
<h2>Course Details</h2>
<dl class="row">
    <dt class="col-sm-3">Name</dt><dd class="col-sm-9">@Model.Name</dd>
    <dt class="col-sm-3">Description</dt><dd class="col-sm-9">@Model.Description</dd>
    <dt class="col-sm-3">Price</dt><dd class="col-sm-9">@Model.Price.ToString("C")</dd>
    <dt class="col-sm-3">Subject</dt><dd class="col-sm-9">@Model.SubjectName</dd>
    <dt class="col-sm-3">Preferred Classroom</dt><dd class="col-sm-9">@Model.PreferredClassroomLocation</dd>
</dl>
<div>
    <li>
        <a asp-controller="CourseTeacher"
           asp-action="Index"
           asp-route-courseId="@Model.Id"
           class="btn btn-secondary">
            Assign / Manage Teachers
        </a>
    </li>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
